    "@hono/zod-openapi": "^1.0.1",
    "@hono/zod-validator": "^0.4.2",
    "@scalar/hono-api-reference": "^0.5.162",
    "@types/bcryptjs": "^2.4.6",
    "ai": "^4.3.19",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.2.12",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
